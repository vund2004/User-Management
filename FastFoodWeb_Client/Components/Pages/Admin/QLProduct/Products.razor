@page "/products"
@using FastFoodWeb_Client.Components.Layout
@layout AdminLayout

<!-- begin row -->
<div class="row">
    <div class="col-md-12 m-b-30">
        <!-- begin page title -->
        <div class="d-block d-sm-flex flex-nowrap align-items-center">
            <div class="page-title mb-2 mb-sm-0">
                <h1>Quản lí Sản Phẩm</h1>
            </div>
        </div>
        <!-- end page title -->
    </div>
</div>
<!-- end row -->
<!-- begin row -->
<div class="row editable-wrapper">
    <div class="col-lg-12 ">
        <div class="card card-statistics">

            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <a href="addproduct" class="tabledit-edit-button btn btn-success">
                            <span><i class="dashicons dashicons-plus-light"></i></span> Thêm
                        </a>
                    </div>
                </div>
                @if (products.Any())
                {
                    <div class="table-responsive">
                        <table class="table display responsive nowrap table-light table-bordered">
                            <thead class="thead-light text-center">
                                <tr>
                                    <th class="col-3">Tên sản phẩm</th>
                                    <th class="col-2">Giá</th>
                                    <th class="col-2">Hình</th>
                                    <th class="col-2">Trạng Thái</th>
                                    <th class="col-1">Combo</th>
                                    <th class="col-2">Thao Tác</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in products)
                                {
                                    <tr class="text-center">
                                        <td>@product.ProductName</td>
                                        <td>@FormatCurrency(product.Price)</td>
                                        <td>
                                            <img src="@product.Image" width="70" alt="Product Image" class="product-image" />
                                        </td>
                                        <td>
                                            <span class="mr-2 mb-2 mr-sm-0 mb-sm-0 badge @(product.IsActive ? "badge-success" : "badge-danger")">
                                                @(product.IsActive ? "Còn Hàng" : "Hết Hàng")
                                            </span>
                                        </td>
                                        <td>
                                            <span class="mr-2 mb-2 mr-sm-0 mb-sm-0 badge @(product.IsCombo ? "badge-success" : "badge-danger")">
                                                @(product.IsCombo ? "Có" : "Không")
                                            </span>
                                        </td>
                                        <td>
                                            <a href="editproduct/@product.Id" class="tabledit-edit-button btn btn-sm btn-primary">
                                                <span><i class="dashicons dashicons-admin-customizer"></i></span> Sửa
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <p class="text-center">Chưa có sản phẩm nào.</p>
                }
            </div>
        </div>
    </div>
</div>
<!-- end row -->
