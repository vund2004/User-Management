@page "/admin"
@using FastFoodWeb_Client.Components.Layout
@layout AdminLayout

<h1>Trang Chủ Admin</h1>

<div class="mb-3">
    <button id="sweetalert-09" class="btn btn-primary">
        Example Sweetalert
    </button>
</div>
<button class="btn btn-primary" data-toggle="modal"
        data-target="#eventModal">
    Example Modal
</button>
<!-- event Modal -->
<div class="modal fade" id="eventModal" tabindex="-1" role="dialog"
     aria-labelledby="verticalCenterTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="verticalCenterTitle">
                    Add New Event
                </h5>
                <button type="button" class="close" data-dismiss="modal"
                        aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="form-group">
                        <label for="modelemail">Event Name</label>
                        <input type="email" class="form-control"
                               id="modelemail">
                    </div>
                    <div class="form-group">
                        <label>Choose Event Color</label>
                        <select class="form-control">
                            <option>Primary</option>
                            <option>Warning</option>
                            <option>Success</option>
                            <option>Danger</option>
                        </select>
                    </div>

                </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger"
                        data-dismiss="modal">
                    Close
                </button>
                <button type="button" class="btn btn-success">
                    Save
                    changes
                </button>
            </div>
        </div>
    </div>
</div>